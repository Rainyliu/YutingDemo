<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rainy.yutingdemo.ConstraintLayoutActivity">
    <ImageView
        android:id="@+id/image"
        android:src="@mipmap/images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/activity_constraint_layout"
        app:layout_constraintTop_toTopOf="@id/activity_constraint_layout"
        />

</android.support.constraint.ConstraintLayout>
