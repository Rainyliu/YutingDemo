<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rainy.yutingdemo">

    <uses-sdk android:minSdkVersion="4"></uses-sdk>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--AndroidManifest.xml占位符与productFlavor结合
        友盟移动统计sdk中使用的方案
         通过build.gradle脚本中的productFlavor 来实现的
         -->
        <!--umeng key channel-->
        <!--<meta-data-->
            <!--android:name="UMENG_CHANNEL"-->
            <!--android:value="${UMENG_CHANNEL_VALUE}"/>-->

        <activity android:name=".MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--android:enabled 属性设为 false，否则运行时将会在桌面上出现两个相同功能但不同显示的应用图标和名称。-->
        <activity-alias
            android:name=".MainAliasActivity"
            android:targetActivity=".MainActivity"
            android:label="Samples Alias"
            android:enabled="false"
            android:icon="@mipmap/images">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!--别名设置-->
        <!--<activity-alias-->
            <!--android:enabled=["true" | "false"]-->//布尔类型，是否开启别名设置默认为true
            <!--android:exported=["true" | "false"]-->//布尔类型，是否支持其他应用通过这个别名访问目标Activity。默认为true
            <!--android:icon="drawable resource"-->//类似 activity 标签，表示目标 Activity 的显示图标和标签；
            <!--android:label="string resource"-->
            <!--android:name="string"-->//Activity 别名，在 activity标签中， name 属性必须与对应 Activity 文件的名字保持一致，而这里的别名可任意设置，保证唯一性即可；
            <!--android:permission="string"-->//权限设置，对别名的使用加以限制，详细属性值参考开发者官网对权限部分的说明
            <!--android:targetActivity="string">-->//制定别名能够启动的目标Activity，注意，属性值一定要对应到 activity 标签中的 name 属性，并且该 activity 标签一定要位于 activity-alias 标签前面；
        <!--</activity-alias>-->


    <!--友盟统计的appKey:586b616cae1bf86ba7001386-->
        <meta-data android:name="UMENG_APPKEY" android:value="${UMENG_KEY}"  />
        <meta-data android:name="UMENG_CHANNEL" android:value="${UMENG_CHANNEL_VALUE}" />


    </application>

</manifest>